{
  "extends": "@repo/typescript-config/base.json",
  "include": ["src/**/*.mts"],
  "compilerOptions": {
    "lib": ["ESNext"],
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2022",
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "references": [{ "path": "./tsconfig.node.json" }]
}
