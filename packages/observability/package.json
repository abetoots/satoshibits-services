{
  "name": "@satoshibits/observability",
  "version": "1.0.0",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    },
    "./browser": {
      "import": "./dist/browser.mjs",
      "types": "./dist/browser.d.mts"
    },
    "./node": {
      "import": "./dist/node.mjs",
      "types": "./dist/node.d.mts"
    },
    "./testing": {
      "import": "./dist/testing.mjs",
      "types": "./dist/testing.d.mts"
    }
  },
  "type": "module",
  "private": false,
  "scripts": {
    "build": "rm -rf dist && tsc",
    "lint": "pnpm exec eslint .",
    "prepublishOnly": "npm run build",
    "pre-commit": "pnpm exec lint-staged -c ./.lintstagedrc.mjs --concurrent false",
    "test": "USE_VITEST_BROWSER=1 vitest --run",
    "test:shared": "vitest --run \"src/__tests__/shared/**/*.test.mts\" \"src/__tests__/readme-examples.test.mts\"",
    "test:node:unit": "vitest --run \"src/__tests__/node/node-*.test.mts\" \"src/__tests__/node/unit/**/*.test.mts\"",
    "test:node:integration": "vitest --run \"src/__tests__/node/integration/**/*.test.mts\" \"src/__tests__/integration/**/*.test.mts\"",
    "test:browser": "USE_VITEST_BROWSER=1 vitest --run \"src/__tests__/browser/\"",
    "test:browser:headed": "USE_VITEST_BROWSER=1 VITEST_BROWSER_NAME=chromium vitest --run --browser.headless=false \"src/__tests__/browser/"
  },
  "files": [
    "./dist/**/*",
    "!./dist/**/*.test.*"
  ],
  "keywords": [
    "opentelemetry",
    "observability",
    "metrics",
    "traces",
    "logs",
    "telemetry",
    "monitoring"
  ],
  "engines": {
    "node": "^18.19.0 || >=20.6.0"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/api-logs": "^0.204.0",
    "@opentelemetry/auto-instrumentations-node": "^0.64.1",
    "@opentelemetry/auto-instrumentations-web": "^0.51.0",
    "@opentelemetry/context-async-hooks": "^2.0.1",
    "@opentelemetry/context-zone-peer-dep": "^2.0.1",
    "@opentelemetry/core": "^2.1.0",
    "@opentelemetry/exporter-logs-otlp-http": "^0.204.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.204.0",
    "@opentelemetry/exporter-prometheus": "^0.204.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.204.0",
    "@opentelemetry/instrumentation": "^0.204.0",
    "@opentelemetry/instrumentation-fetch": "^0.204.0",
    "@opentelemetry/instrumentation-xml-http-request": "^0.204.0",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/sdk-logs": "^0.204.0",
    "@opentelemetry/sdk-metrics": "^2.0.1",
    "@opentelemetry/sdk-node": "^0.204.0",
    "@opentelemetry/sdk-trace-base": "^2.0.1",
    "@opentelemetry/sdk-trace-node": "^2.0.1",
    "@opentelemetry/sdk-trace-web": "^2.0.1",
    "@opentelemetry/semantic-conventions": "^1.36.0",
    "@satoshibits/functional-errors": "workspace:*",
    "lru-cache": "^11.2.2"
  },
  "author": {
    "name": "Abe M. Caymo",
    "email": "caymo.abesuni@gmail.com",
    "url": "https://github.com/abetoots"
  },
  "license": "ISC",
  "description": "Unified smart observability client built on OpenTelemetry SDK with automatic instrumentation and business context enrichment",
  "optionalDependencies": {
    "@sentry/node": "^10.7.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@playwright/test": "^1.56.0",
    "@repo/typescript-config": "workspace:^",
    "@satoshibits/eslint-config": "workspace:^",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.3.0",
    "@typescript-eslint/utils": "^8.41.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.34.0",
    "jiti": "^2.5.1",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "playwright": "^1.55.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "web-vitals": "^5.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/abetoots/satoshibits-services.git"
  },
  "homepage": "https://github.com/abetoots/satoshibits-services/packages/observability"
}
