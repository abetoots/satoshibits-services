{
  "name": "@satoshibits/queue-production-example",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Production-grade example demonstrating @satoshibits/queue best practices",
  "scripts": {
    "start:redis": "docker-compose up -d",
    "stop:redis": "docker-compose down",
    "start:producer": "tsx src/producer.ts",
    "start:worker": "tsx src/worker.ts",
    "dev": "concurrently \"npm:start:producer\" \"npm:start:worker\"",
    "test:signup": "curl -X POST http://localhost:3000/signup -H 'Content-Type: application/json' -d '{\"userId\":\"123\",\"email\":\"user@example.com\"}'",
    "test:signup-attachment": "curl -X POST http://localhost:3000/signup-with-attachment -H 'Content-Type: application/json' -d '{\"userId\":\"456\",\"email\":\"user@example.com\",\"attachmentUrl\":\"mock-attachment-url-to-s3\"}'",
    "test:transient": "curl http://localhost:3000/simulate-error?type=transient",
    "test:permanent": "curl http://localhost:3000/simulate-error?type=permanent"
  },
  "dependencies": {
    "@satoshibits/queue": "^2.0.3",
    "@satoshibits/functional": "^1.1.2",
    "bullmq": "^5.61.0",
    "ioredis": "^5.8.1",
    "express": "^5.1.0",
    "pino": "^10.0.0",
    "pino-pretty": "^13.1.1",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "tsx": "^4.0.0",
    "concurrently": "^9.2.1",
    "@types/express": "^5.0.3",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
